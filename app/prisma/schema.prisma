generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String
  password String
  role Role @default(USER)
  interview Interview[]
}

model Interview{
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(references: [id], fields: [userId])
  question Question[]
  videoUrl String?
  created_At DateTime @default(now())
}

model Question{
  id Int @id @default(autoincrement())
  interviewId Int
  text String
  techstack String
  source String // ai  admin
  interview Interview @relation(references: [id], fields: [interviewId])
}


enum Role {
  USER
  ADMIN
}